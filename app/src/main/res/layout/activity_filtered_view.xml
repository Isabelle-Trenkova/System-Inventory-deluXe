<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="edu.gmu.systeminventorydeluxe.InventoryMainActivity">


    <!-- This is the list view, which will allow us to add
    little icons of inventory showing each item individually and all together-->
    <ListView
        android:id="@+id/priority_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:drawSelectorOnTop="true">


    </ListView>


</RelativeLayout>