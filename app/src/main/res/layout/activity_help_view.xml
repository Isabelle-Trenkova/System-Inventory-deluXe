<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        expandableTextView:layout_constraintBottom_toBottomOf="parent"
        expandableTextView:layout_constraintEnd_toEndOf="parent"
        expandableTextView:layout_constraintStart_toStartOf="parent"
        expandableTextView:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <TextView
                android:id="@+id/help_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/helpmenu"
                android:layout_marginTop="14dp"
                android:textColor="#2196F3"
                android:textSize="34sp"
                expandableTextView:layout_constraintEnd_toEndOf="parent"
                expandableTextView:layout_constraintStart_toStartOf="parent"
                expandableTextView:layout_constraintTop_toTopOf="parent">


            </TextView>

            <TextView
                android:id="@+id/help_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpinstruct"
                android:layout_marginTop="14dp"
                android:textColor="#5627AA"
                android:textSize="24sp"
                expandableTextView:layout_constraintEnd_toEndOf="parent"
                expandableTextView:layout_constraintStart_toStartOf="parent"
                expandableTextView:layout_constraintTop_toBottomOf="@+id/help_text">

            </TextView>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="413dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:padding="8dp"
                expandableTextView:layout_constraintEnd_toEndOf="parent"
                expandableTextView:layout_constraintStart_toStartOf="parent"
                expandableTextView:layout_constraintTop_toBottomOf="@+id/help_text2">

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:id="@+id/expand_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    expandableTextView:animDuration="100"
                    expandableTextView:maxCollapsedLines="1">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#5627AA"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent" />

                </com.ms.square.android.expandabletextview.ExpandableTextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="413dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                expandableTextView:layout_constraintEnd_toEndOf="parent"
                expandableTextView:layout_constraintStart_toStartOf="parent"
                expandableTextView:layout_constraintTop_toBottomOf="@+id/linear1">

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:id="@+id/expand_text_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    expandableTextView:animDuration="100"
                    expandableTextView:maxCollapsedLines="1">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#5627AA"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent" />

                </com.ms.square.android.expandabletextview.ExpandableTextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="413dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                expandableTextView:layout_constraintEnd_toEndOf="parent"
                expandableTextView:layout_constraintStart_toStartOf="parent"
                expandableTextView:layout_constraintTop_toBottomOf="@+id/linear2">

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:id="@+id/expand_text_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    expandableTextView:animDuration="100"
                    expandableTextView:maxCollapsedLines="1">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#5627AA"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent" />

                </com.ms.square.android.expandabletextview.ExpandableTextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="413dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                expandableTextView:layout_constraintEnd_toEndOf="parent"
                expandableTextView:layout_constraintStart_toStartOf="parent"
                expandableTextView:layout_constraintTop_toBottomOf="@+id/linear3">

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:id="@+id/expand_text_view4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    expandableTextView:animDuration="100"
                    expandableTextView:maxCollapsedLines="1">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#5627AA"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent" />

                </com.ms.square.android.expandabletextview.ExpandableTextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="413dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                expandableTextView:layout_constraintEnd_toEndOf="parent"
                expandableTextView:layout_constraintStart_toStartOf="parent"
                expandableTextView:layout_constraintTop_toBottomOf="@+id/linear4">

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:id="@+id/expand_text_view5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    expandableTextView:animDuration="100"
                    expandableTextView:maxCollapsedLines="1">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#5627AA"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent" />

                </com.ms.square.android.expandabletextview.ExpandableTextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="413dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                expandableTextView:layout_constraintEnd_toEndOf="parent"
                expandableTextView:layout_constraintStart_toStartOf="parent"
                expandableTextView:layout_constraintTop_toBottomOf="@+id/linear5">

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:id="@+id/expand_text_view6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    expandableTextView:animDuration="100"
                    expandableTextView:maxCollapsedLines="1">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#5627AA"
                        android:textSize="24sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent" />

                </com.ms.square.android.expandabletextview.ExpandableTextView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>