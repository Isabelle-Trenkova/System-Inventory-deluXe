<?xml version="1.0" encoding="utf-8"?>

<!--This is the template for list items that will show up in the inventory list view-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants" >
    <!--I HATE THIS, damn the lack of the previous line broke everything
    I <3 stack overflow for niche things like this
    https://stackoverflow.com/questions/5526198/onitemclicklistener-not-firing-on-custom-arrayadapter

    Literally the comment that saved me was from 2012 - IZZ^^^^ -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:focusable="false">


        <!-- An image of the item-->
        <ImageButton
            android:id="@+id/image_of_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#eee"
            android:scaleType="center"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- The name of the product -->
        <TextView
            android:id="@+id/name_product"
            android:layout_width="271dp"
            android:layout_height="31dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="19dp"
            android:text="TextView"
            android:textSize="20sp"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_of_product"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- The quantity of the item -->
        <TextView
            android:id="@+id/quant_product"
            android:layout_width="98dp"
            android:layout_height="22dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="192dp"
            android:layout_marginBottom="34dp"
            android:gravity="center"
            android:text="TextView"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_of_product" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>